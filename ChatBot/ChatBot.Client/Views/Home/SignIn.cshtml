@model ChatBot.Client.Models.SignInViewModel

@{
    ViewData["Title"] = "SignIn";
}

<br />
<br />
<div class="container">
    <div class="col-md-offset-3 col-md-6">
        <br />
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Log In</h2>
            </div>
            <div class="panel-body ">
                <form asp-controller="Home" asp-action="SignIn" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label asp-for="Email" class="col-md-3 control-label">Email : </label>
                        <div class="col-md-8">
                            <input asp-for="Email" class="form-control" placeholder="Email" type="email" /><br />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="col-md-3 control-label">Password : </label>
                        <div class="col-md-8">
                            <input asp-for="Password" class="form-control" placeholder="Password" type="password" /><br />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-2">
                            <button type="submit" class="btn btn-default" name="submit">Submit</button>
                        </div>
                        <div class="col-md-offset-1 col-md-3">
                            <input type="submit" class="btn btn-default" formaction="bot" value="Continue as Guest" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
    @{
        if (ViewBag.Error != null)
        {
            <br />  <br />  <br />  <br />
            <div class="col-md-3 alert alert-danger" role="alert">
                @ViewBag.Error
            </div>
        }
    }
</div>

