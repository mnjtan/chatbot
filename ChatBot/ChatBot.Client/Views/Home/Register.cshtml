@model ChatBot.Client.Models.User

@{
    ViewData["Title"] = "Register";
}

<br />  <br />  <br />
<div class="container">
    <div class="col-md-offset-2 col-md-8">
        <br />
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1 class="panel-title">Register</h1>
            </div>
            <div class="panel-body ">
                <form asp-controller="Pizza" asp-action="Register" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-3 control-label">Name : </label>
                        <div class="col-md-7">
                            <input asp-for="Name" required class="form-control" placeholder="Name" type="text" /><br />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="col-md-3 control-label">Email : </label>
                        <div class="col-md-7">
                            <input asp-for="Email" required class="form-control" placeholder="Email" type="email" /><br />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="col-md-3 control-label">Phone : </label>
                        <div class="col-md-7">
                            <input asp-for="Phone" required class="form-control" placeholder="Phone" type="tel" /><br />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Team" class="col-md-3 control-label">Favorite Team : </label>
                        <div class="col-md-7">
                            <input asp-for="Team" required class="form-control" placeholder="Team" type="text" /><br />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-4">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
    @{
        if (ViewBag.Error != null)
        {
            <br /> <br /> <br /> <br />
            <div class="col-md-offset-4 col-md-4 alert alert-danger text-center" role="alert">
                @ViewBag.Error
            </div>
        }
    }
</div>
